{% extends 'base.html.twig' %}

{% block h1 %}Markers{% endblock %}

{% block body %}
  <div class="row">
    <div class="col">
      <table class="table table-striped table-middle-aligned">
          <thead>
              <tr>
                  <th scope="col">Address</th>
                  <th scope="col">Message</th>
                  <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for marker in markers %}
              <tr>
                  <td>{{ marker.location.address }}</td>
                  <td>{{ marker.message }}</td>
                  <td class="text-center">
                      <div class="item-actions">
                          <a href="{{ path('show_marker', {id: marker.id}) }}" class="btn btn-sm btn-default">
                              <i class="fa fa-eye" aria-hidden="true"></i> Show
                          </a>
                      </div>
                  </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="4" align="center">No markers found</td>
             </tr>
          {% endfor %}
          </tbody>
      </table>
    </div>
  </div>
{% endblock %}
